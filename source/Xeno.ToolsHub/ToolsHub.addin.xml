<Addin Id="ToolsHub"
       Namespace="ToolsHub"       
       Version="0.10"
       CompatVersion="0.10"
       IsRoot="true"
       xmlns="https://github.com/mono/mono-addins/MonoAddins.xsd">
  <Runtime>
    <Import Assembly="Xeno.ToolsHub.exe" />
  </Runtime>

  <!--
    Alt names for 'OnStartupAddins': "StartupAddins", "AppInitialize", ApplicationAddins
  -->
  
  <ExtensionPoint Path="/ToolsHub/OnStartupAddins">
    <ExtensionNode Name="OnStartupAddin" ObjectType="Xeno.ToolsHub.ExtensionModel.ApplicationAddin" />
  </ExtensionPoint>

  <ExtensionPoint Path="/ToolsHub/OnStartupAddins">
    <ExtensionNode Name="OnStartupAddin" ObjectType="Xeno.ToolsHub.ExtensionModel.ApplicationAddin" />
  </ExtensionPoint>
  

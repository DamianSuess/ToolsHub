<Addin Id="VeraCryptAddin"
       Namespace="ToolsHub"
       Name="Sample Add-in"
       Version="1.0"
       Author="Damian Suess"
       Description="Quick sample add-in project."
       Category="Tools"
       DefaultEnabled="false"
       xmlns="https://github.com/mono/mono-addins/MonoAddins.xsd">
  <Runtime>
    <Import assembly="SampleAddin.dll" />
  </Runtime>

  <Dependencies>
    <Addin Id="ToolsHub" Version="1.0" />
  </Dependencies>

  <Extension Path="/ToolsHub/OnStartupAddins">
    <ApplicationAddin Type="Xeno.ToolsHub.SampleAddin.Sample" />
  </Extension>

  <Extension Path="/ToolsHub/SystemTray">
    <SystemTrayAddin type="Xeno.ToolsHub.SampleAddin.SysTrayAddin" />
  </Extension>
  <!--
  <Extension Path="/ToolsHub/AddinPreferences">
    <ApplicationAddin Type="Xeno.ToolsHub.SampleAddin.SamplePreferences" />
  </Extension>
  -->
</Addin>
